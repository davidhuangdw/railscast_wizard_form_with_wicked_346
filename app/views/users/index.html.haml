.page-header
  = link_to new_user_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New User
  %h1 Listing users

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Email
        %th Password digest
        %th Name
        %th Twitter username
        %th Github username
        %th Website
        %th Date of birth
        %th Bio
        %th
        %th
        %th

    %tbody
      - @users.each do |user|
        %tr
          %td= user.email
          %td= user.password_digest
          %td= user.name
          %td= user.twitter_username
          %td= user.github_username
          %td= user.website
          %td= user.date_of_birth
          %td= user.bio
          %td= link_to 'Show', user
          %td= link_to 'Edit', edit_user_path(user)
          %td= link_to 'Destroy', user, :data => { confirm: 'Are you sure?' }, :method => :delete
